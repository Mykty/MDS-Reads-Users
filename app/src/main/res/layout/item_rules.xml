<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bigColor"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/ruleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/qbold"
                android:text="Rule #1:"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ruleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ruleNumber"
                android:fontFamily="@font/quick"
                android:text="Дедлайн"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/ruleDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quick"
                android:text="Таңдалған дедлайнды сақтау"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>